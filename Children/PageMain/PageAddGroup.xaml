<Page x:Class="Children.PageMain.PageAddGroup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Children.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageAddGroup">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Введите группу" FontSize="20" Margin="275 0 0 0"/>
        <TextBox Name="GroupNumberTb" Grid.Row="1" FontSize="20" Width="250"/>
        <TextBlock Text="Выберите вид группы" Grid.Row="2" FontSize="20" Margin="275 0 0 0"/>
        <ComboBox Name="GroupTypeCmb" Grid.Row="3" FontSize="20" Width="250"/>
        <Button Name="AddBtn" Content="Добавить" Click="AddBtn_Click" Grid.Row="5" Width="200" Margin="0 0 250 0"/>
        <Button Name="BackBtn" Content="Назад" Click="BackBtn_Click" Grid.Row="5" Width="200" Margin="250 0 0 0"/>
    </Grid>
</Page>
